{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "1135px"
		},
		"color": {
			"defaultPalette": false,
			"custom": false,
			"palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#010203"
                },
				{
					"name": "White",
					"slug": "white",
					"color": "white"
				}
			],
			"gradients": [
				{
					"name": "Dark Overlay",
					"slug": "dark",
					"gradient": "linear-gradient(to bottom, #091523, #0E253F)"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Cousine\", monospace",
					"name": "Cousine",
					"slug": "accent"
				},
				{
					"fontFamily": "\"Montserrat\", sans-serif",
					"name": "Montserrat",
					"slug": "body"
				}
			]
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontSizes": [
						{
							"name": "Large",
							"slug": "large",
							"size": "3.2rem"
						},
						{
							"name": "Regular",
							"slug": "regular",
							"size": "1.85rem"
						},
						{
							"name": "Accent",
							"slug": "accent",
							"size": "1rem"
						}
					]
				},
				"color": {
					"palette": [
						{
							"name": "Blue",
							"slug": "blue",
							"color": "#01FDAB"
						},
						{
							"name": "Green",
							"slug": "green",
							"color": "#0262F0"
						}
					]
				}
			}
		}
	},
	"styles": {
		"color": {
			"text": "#081523"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body)"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"lineHeight": "1.25"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0.5em"
					}
				}
			},
			"core/paragraph": {
				"typography": {
					"lineHeight": "1.8"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "2.1em"
					}
				}
			},
			"core/button": {
				"typography": {
					"fontSize": "1rem",
					"fontWeight": "600"
				}
			},
			"core/navigation": {
				"color": {
					"background": "var(--wp--preset--color-dark)"
				}
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "inherit"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
